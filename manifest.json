{
  "manifest_version": 3,
  "name": "Dim for X",
  "version": "1.0.0",
  "description": "Brings back the Dim theme to X (Twitter) with full color customization.",
  "author": "ensardev",
  "homepage_url": "https://dimforx.com",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Dim for X"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "css": ["preload.css"],
      "js": ["src/content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"]
}
